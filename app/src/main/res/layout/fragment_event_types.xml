<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    tools:context=".Fragments.CreateEventsFragments.EventTypesFragment"
    android:layout_height="match_parent">

    <Button
            android:id="@+id/newsEvent"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/noticias"
            android:contentDescription="@string/todo"
            android:layout_marginStart="50dp" />

    <RadioButton
        android:id="@+id/radioButtonNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/notificationEvent"
        android:layout_marginStart="92dp"
        android:layout_marginTop="-268dp"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="92dp" />

    <RadioButton
        android:id="@+id/radioButtonEventsType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/notificationEvent"
        android:layout_marginEnd="89dp"
        android:layout_marginTop="-268dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="89dp" />

    <RadioButton
        android:id="@+id/radioButtonWorks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/radioButtonNews"
        android:layout_marginEnd="101dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="101dp" />

    <RadioButton
        android:id="@+id/radioButtonNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="230dp"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="85dp" />

    <Button
        android:id="@+id/jobOfferEvent"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/ofertatrabajo"
        android:contentDescription="@string/todo"
        android:layout_marginStart="250dp" />

    <Button
        android:id="@+id/notificationEvent"
        android:layout_width="110dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/newsEvent"
        android:layout_marginBottom="268dp"
        android:background="@drawable/notificaciones"
        android:contentDescription="@string/todo"
        android:layout_alignLeft="@+id/newsEvent" />

    <Button
        android:id="@+id/forTypeEvent"
        android:layout_width="110dp"
        android:layout_height="120dp"
        android:layout_alignStart="@+id/jobOfferEvent"
        android:layout_alignTop="@+id/notificationEvent"
        android:background="@drawable/eventos2"
        android:contentDescription="@string/todo"
        android:layout_alignLeft="@+id/jobOfferEvent" />

    <TextView
        android:id="@+id/whatTypeEvent"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:text="¿Qué tipo de evento vas a crear?"
        android:textSize="18dp"
        android:textAlignment="center"
        android:textColor="#009EAD" />
    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/whatTypeEvent"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center|right"
        android:layout_marginBottom="-33dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/cerrar"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp" />

</RelativeLayout>
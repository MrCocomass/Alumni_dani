<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginTop="5dp"
        card_view:cardBackgroundColor="#665F68"
        card_view:cardCornerRadius="1dp">

        <TextView
            android:id="@+id/textAsignatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Asignatura"
            android:textAlignment="center"
            android:textSize="18dp"
            tools:textColor="@android:color/white" />


        <ImageView
            android:id="@+id/imageNotas"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:background="#009EAD"
            android:contentDescription="@string/todo" />

        <TextView
            android:id="@+id/textNota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="38dp"
            android:text="6,7"
            android:textSize="20dp"
            tools:textColor="@android:color/white" />


        <ImageView
            android:id="@+id/imageComentario"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"

            android:background="#009EAD"
            android:contentDescription="@string/todo" />

        <TextView
            android:id="@+id/textComentario"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="38dp"
            android:text="Comentario Profesor"
            android:textAlignment="center"
            tools:textColor="@android:color/white" />



    </android.support.v7.widget.CardView>

</LinearLayout>
